.container-fluid
  .row
    %h3.text-center Create book
    = form_with url: book_index_path, method: :post, local: true do
      = text_field_tag(:name, nil, placeholder: 'Book name')
      = text_field_tag(:description, nil, placeholder: 'Description')
      = text_field_tag(:author, nil, description: 'Author')
      = submit_tag('create')