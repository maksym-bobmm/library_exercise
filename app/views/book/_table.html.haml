%table.table.table-striped.table-bordered
  %thead
    %tr.bg-secondary
      %th Name
      %th Description
      %th Author
      %th(colspan="3" ) Status
  %tdata
    - books.each do |book|
      %tr
        %td=book.name
        %td=book.description
        %td=book.author
        %td=receive_book_state(book)
        %td
          = check_box_tag("checked_books[]", book.id)
          = link_to 'delete', book_path(book), method: :delete
        %td
          = link_to 'show', book_path(book)
          = link_to 'edit', edit_book_path(book)
